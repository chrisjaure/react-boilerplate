{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React ES6 Browserify boilerplate",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisjaure/react-boilerplate.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-js": "browserify index.js -t babelify | uglifyjs --compress --mangle > build.js",
    "watch-js": "watchify index.js -t babelify --debug --verbose -o build.js",
    "dev": "npm run watch-js & browser-sync start --server --files \"build.js, index.html\"",
    "build": "NODE_ENV=production npm run build-js"
  },
  "keywords": [
    "boilerplate",
    "react",
    "es6"
  ],
  "author": "Chris Jaure",
  "license": "ISC",
  "dependencies": {
    "immutable": "^3.6.2",
    "react": "^0.13.0-rc1"
  },
  "devDependencies": {
    "babelify": "^5.0.3",
    "browser-sync": "^2.0.1",
    "browserify": "^8.1.3",
    "uglify-js": "^2.4.16",
    "watchify": "^2.3.0"
  }
}
